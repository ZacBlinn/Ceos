<form method="post" action="{{ path('appreciation_delete', {'id': appreciation.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cet objet ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appreciation.id) }}">
    <button class="btn">Delete</button>
</form>
