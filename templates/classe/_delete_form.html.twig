<form method="post" action="{{ path('classe_delete', {'id': classe.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cet objet ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classe.id) }}">
    <button class="btn btn-danger btn-fill">Supprimer</button>
</form>
