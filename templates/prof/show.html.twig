{% extends 'base.html.twig' %}

{% block title %}Prof{% endblock %}

{% block body %}
    <h1>Prof</h1>
    <br>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ prof.user.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ prof.user.Prenom }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ prof.slug }}</td>
            </tr>
            <tr>
                <th>Activé</th>
                {% if prof.user.isActive == true %}
                    <td>Oui</td>
                {% else %}
                    <td>Non</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col">
            <a class="btn btn-primary" href="{{ path('prof_index') }}">Retour</a>
            <a class="btn btn-warning float-right" href="{{ path('prof_edit', {'id': prof.id}) }}">Éditer</a>
        </div>
        <div>
            {{ include('prof/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
